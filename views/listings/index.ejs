<h1>Latest Laptops:</h1>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListing) {%>
        <div class="card col listing-card">
            <a href="listings/<%= listing._id %>"><img src="<%= listing.image %>" class="card-img-top"></a>
            <div class="card-body">
              <a href="listings/<%= listing._id %>"><p class="card-text"><%= listing.name %></p></a>
              <a href="listings/<%= listing._id %>"><p class="card-text">$<%= listing.price %></p></a>
            </div>
          </div>
        <% } %>
</div>